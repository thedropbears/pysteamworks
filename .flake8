[flake8]
max-line-length = 100
ignore =
	# defaults
	E121,E123,E126,E226,E24,E704,W503,
	# allow sphinx-style comments (E265: block comments start with "# ")
	E265,
	# we don't agree on line length yet
	E501,
	# nobody seems to agree on whitespace...
	# E261: >=2 spaces before inline comment
	E261,
	# E128: continuation line under-indented for visual indent
	E128,
	# E302: 2 blank lines
	E302,
	# E305: 2 blank lines after end of function/class
	E305
exclude =
	.git,
	__pycache__,
	# Tests are sacred.
	tests
